<h1>人氣餐廳</h1>
<hr />
<div class="d-flex flex-column">
  {{#each restaurants}}
    <div class="card col-8 mb-3 mx-auto d-flex flex-row">
      <div>
        <img src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      </div>
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數：{{this.favoritedCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex">
          <a href="/restaurants/{{this.id}}">
            <div class="btn btn-primary mr-2">Show</div>
          </a>
          {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
                class="btn btn-danger">移除最愛</button></form>
          {{else}}
            <form action="/favorite/{{this.id}}" method="POST"><button type="submit"
                class="btn btn-primary">加到最愛</button>
            </form>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>