<div class="card">
  <div class="card-body d-flex">
    <div>
      <img src="{{userResult.image}}" style="width: 200px" alt="userImage">
    </div>
    <div class="mx-4">
      <h5 class="card-title">{{userResult.name}}</h5>
      {{#if userResult.isAdmin}}
        <h6 class="card-subtitle mb-2 text-muted">管理員</h6>
      {{/if}}
      <p>{{userResult.email}}</p>
      {{#ifCond userResult.id user.id}}
        <a class="btn btn-primary" href="/users/{{userResult.id}}/edit	" role="button">Edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>
</br>
<div class="row">
  <div class="col-4">
    <div class="card">
      <div class="card-header">
        <strong>{{userResult.Followings.length}}</strong> Followings (追蹤者)
      </div>
      <div class="d-flex flex-wrap py-4 px-4">
        {{#each userResult.Followings}}
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="userImg" class="img px-2 py-2" style="width: 100px">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        已評論 <strong>{{uniqueComments.length}}</strong> 間餐廳
      </div>
      <div class="d-flex flex-wrap py-4 px-4">
        {{#each uniqueComments}}
          <a href="/restaurants/{{this.Restaurant.id}}">
            <img src="{{this.Restaurant.image}}" alt="restaurantImg" class="img px-2 py-2" style="width: 100px">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
</br>
<div class="row">
  <div class="col-4">
    <div class="card">
      <div class="card-header">
        <strong>{{userResult.Followers.length}}</strong> Followers (追隨者)
      </div>
      <div class="d-flex flex-wrap py-4 px-4">
        {{#each userResult.Followers}}
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="userImg" class="img px-2 py-2" style="width: 100px">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        已收藏 <strong>{{userResult.FavoritedRestaurants.length}}</strong> 間餐廳
      </div>
      <div class="d-flex flex-wrap py-4 px-4">
        {{#each userResult.FavoritedRestaurants}}
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="restaurantImg" class="img px-2 py-2" style="width: 100px">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>